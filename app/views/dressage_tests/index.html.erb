<div class="container">

<%= form_tag dressage_tests_path, class: "form-inline", method: :get do %>
  <%= text_field_tag 'term', params[:term], placeholder: "Search for a test", class: "form-control col-4" %> <%= submit_tag 'Search', class: "btn btn-primary" %>
<% end %>

<div class="test-list">

<% @dressage_tests.each do |d| %>


<% if d.respond_to?(:pg_search_highlight) %>

    <%= link_to (dressage_test_path(d)) do %>
  <%= d.pg_search_highlight.html_safe %>
  <% end %>

<% else %>

<ul>
  <li>
    <%= link_to (dressage_test_path(d)) do %>
  <%= d.year %> <%= d.org_name %> <%= d.level %> <%= d.name %>
  <% end %>
</li>
</ul>
<% end %>

<% end %>

</div>
</div>
