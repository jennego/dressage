<div id="results" style="background-color:white">



  <table class='table table-hover test-table'>
    <thead class='thead-light'>
      <tr>
        <th>Year</th>
        <th>Org </th>
        <th>Level</th>
        <th>Test</th>
        <th>Current</th>
      </tr>
    </thead>
    <% dressage_tests.each do |d| %>
    <% if d.current == true %> 
    <tr>
    <% else %>
    <tr class="table-danger">
    <% end %> 
    
        <td>  <%= link_to (dressage_test_path(d)) do %> <%= d.year %> <%end%> </td>
        <td>  <%= link_to (dressage_test_path(d)) do %> <%= d.org_name %> <% end %> </td>
        <td>  <%= link_to (dressage_test_path(d)) do %> <%= d.level %> <% end %> </td>
        <td>  <%= link_to (dressage_test_path(d)) do %> <%= d.name %> <% end %> </td>
        <td>  <%= link_to (dressage_test_path(d)) do %>  <%= d.current == true ? ('Yes') : ('No') %>  
        <% end %> </td> 
      </tr>
    <% end %>
  </table>
</div>

<%= will_paginate @dressage_tests %>
