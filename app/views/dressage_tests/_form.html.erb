<div class="container">
  <%= simple_form_for @dressage_test do |f| %>
  <div class="bg-light p-4">
    <h3> The Basics</h3>
    <div class="row">
      <div class="col">
        <%= f.input :org_name %>
        <%= f.input :name %>
      </div>
      <div class="col">
        <%= f.input :level %>
        <%= f.input :year %>
        <%
=begin%>
        <%= f.input :select, :tag_value %>
        <%
=end%>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= f.input :introduce %>
        <%= f.input :purpose %>
        <%= f.input :note %>
      </div>
    </div>
  </div>


  <div class="bg-light p-4">
    <h3>Add PDF links </h3>

    <%= f.fields_for :test_links do |f| %>
    <%= render 'test_link_fields', :f => f %>
    <% end %>

    <div class='links'>
      <%= link_to_add_association 'add link', f, :test_links, class: "btn btn-dark" %>
    </div>
  </div>



  <div class="bg-secondary p-4">
    <h3>Add links </h3>

    <%= f.fields_for :links do |f| %>
    <%= render 'link_fields', :f => f %>
    <% end %>

    <div class='links'>
      <%= link_to_add_association 'add link', f, :links, class: "btn btn-dark" %>
    </div>
  </div>


  <div class="form-group">

    <div class="bg-info p-4">
      <h2>Add Moves to test</h2>

      <%= f.fields_for :moves do |f| %>
      <%= render 'move_fields', :f => f %>
      <% end %>

      <div class='links'>
        <%= link_to_add_association 'add dressage move', f, :moves, class: "btn btn-dark" %>
      </div>

    </div>
  </div>

  <hr>


  <%= f.submit class: 'btn btn-primary' %>

  <% end %>
</div>